@model HomePageModel
<section class="site-content">
    <div class="container">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-sm-10">
                <div class="page-header">
                    <div class="row">
                        <div class="col-md-8">
                            <h1 class="page-title">Sınav Oluştur</h1>
                        </div>                       
                    </div>
                </div>
                <div class="page-content">
                    <div class="page-block">

                        <div class="block-body place-mark-area">
                            <form asp-controller="Home" asp-action="SaveExam" method="post">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="form-group">
                                                <label>Başlık</label>
                                                <select data-style="btn-select" asp-for="@Model.Exam.Title" name="Title" id="articleTitle" data-size="5" onchange="articleChanged();" class="selectpicker js-select-marker js-select-country">
                                                    @foreach (var item in Model.Articles)
                                                    {
                                                        <option value="@item.Title" data-id="@item.Id">@item.Title</option>
                                                    }

                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="block-body">
                                        <input type="hidden" asp-for="@Model.Exam.Body" name="Body" />
                                        <article>
                                            <p>
                                                @Model.Exam.Body
                                            </p>
                                        </article>
                                        <hr>
                                    </div>

                                    @*1*@
                                    <div class="block-body">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <input type="text" class="form-control" name="QuestionOne" asp-for="@Model.Exam.QuestionOne" placeholder="Soru 1">
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="A)" asp-for="@Model.Exam.QOneAOne" name="QOneAOne">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="B)" asp-for="@Model.Exam.QOneATwo" name="QOneATwo">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="C)" asp-for="@Model.Exam.QOneAThree" name="QOneAThree">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="D)" asp-for="@Model.Exam.QOneAFour" name="QOneAFour">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="row">
                                                <div class="col-md-4"></div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <select data-style="btn-select" asp-for="@Model.Exam.QOneTrue" name="QOneTrue" id="answerOption" data-size="5" class="selectpicker js-select-marker js-select-country">
                                                            <option>Doğru Cevap Seç</option>
                                                            <option value="a">A</option>
                                                            <option value="b">B</option>
                                                            <option value="c">C</option>
                                                            <option value="d">D</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-4"></div>
                                            </div>
                                        </div>
                                    </div>
                                    @*1*@
                                    @*2*@
                                    <div class="block-body">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="Soru 2" asp-for="@Model.Exam.QuestionTwo" name="QuestionTwo">
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="A)" asp-for="@Model.Exam.QTwoAOne" name="QTwoAOne">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="B)" asp-for="@Model.Exam.QTwoATwo" name="QTwoATwo">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="C)" asp-for="@Model.Exam.QTwoAThree" name="QTwoAThree">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="D)" asp-for="@Model.Exam.QTwoAFour" name="QTwoAFour">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="row">
                                                <div class="col-md-4"></div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <select data-style="btn-select" asp-for="@Model.Exam.QTwoTrue" name="QTwoTrue" id="answerOption" data-size="5" class="selectpicker js-select-marker js-select-country">
                                                            <option>Doğru Cevap Seç</option>
                                                            <option value="a">A</option>
                                                            <option value="b">B</option>
                                                            <option value="c">C</option>
                                                            <option value="d">D</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-4"></div>
                                            </div>
                                        </div>
                                    </div>
                                    @*2*@
                                    @*3*@
                                    <div class="block-body">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="Soru 3" asp-for="@Model.Exam.QuestionThree" name="QuestionThree">
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="A)" asp-for="@Model.Exam.QThreeAOne" name="QThreeAOne">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="B)" asp-for="@Model.Exam.QThreeATwo" name="QThreeATwo">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="C)" asp-for="@Model.Exam.QThreeAThree" name="QThreeAThree">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="D)" asp-for="@Model.Exam.QThreeAFour" name="QThreeAFour">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="row">
                                                <div class="col-md-4"></div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <select data-style="btn-select" id="answerOption" asp-for="@Model.Exam.QThreeTrue" name="QThreeTrue" data-size="5" class="selectpicker js-select-marker js-select-country">
                                                            <option>Doğru Cevap Seç</option>
                                                            <option value="a">A</option>
                                                            <option value="b">B</option>
                                                            <option value="c">C</option>
                                                            <option value="d">D</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-4"></div>
                                            </div>
                                        </div>
                                    </div>
                                    @*3*@
                                    @*4*@
                                    <div class="block-body">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="Soru 4" asp-for="@Model.Exam.QuestionFour" name="QuestionFour">
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="A)" asp-for="@Model.Exam.QFourAOne" name="QFourAOne">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="B)" asp-for="@Model.Exam.QFourATwo" name="QFourATwo">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="C)" asp-for="@Model.Exam.QFourAThree" name="QFourAThree">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="D)" asp-for="@Model.Exam.QFourAFour" name="QFourAFour">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="row">
                                                <div class="col-md-4"></div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <select data-style="btn-select" id="answerOption" asp-for="@Model.Exam.QFourTrue" name="QFourTrue" data-size="5" class="selectpicker js-select-marker js-select-country">
                                                            <option>Doğru Cevap Seç</option>
                                                            <option value="a">A</option>
                                                            <option value="b">B</option>
                                                            <option value="c">C</option>
                                                            <option value="d">D</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-4"></div>
                                            </div>
                                        </div>
                                    </div>
                                    @*4*@
                                    <hr>
                                    <div class="row">
                                        <div class="col-md-4"></div>
                                        <div class="col-md-4">
                                            <button type="submit" class="btn btn-primary btn-block text-uppercase">Kaydet</button>
                                        </div>
                                        <div class="col-md-4"></div>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>



                </div>
            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
</section>
<script>
    function articleChanged(obj) {                
        window.location.href = '/' + $("#articleTitle option:selected").attr("data-id");
    }
</script>
