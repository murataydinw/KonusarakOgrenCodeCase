@model LoginModel
<section class="site-content login-content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-header page-header-center">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="page-title"><i class="ic ic-lock"></i> Giriş Yap<span class="result-count">Bilgilerinizi girerek hesabınıza giriş yapın.</span></h1>
                        </div>
                    </div>
                </div>
                <div class="page-content">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <form asp-controller="Login" asp-action="Index" method="post">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>E-posta Adresiniz</label>
                                            <input type="text" name="email" asp-for="@Model.Email" data-inputmask="'alias': 'email'" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Parola</label>
                                            <input type="password" class="form-control" name="password" asp-for="@Model.Password">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                    </div>
                                    <div class="col-md-3">

                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary btn-block text-uppercase btn-bold">Giriş Yap</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-info">
                            <p><b>@Model.Message!</b></p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>